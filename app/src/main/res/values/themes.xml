<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChitChat" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/teal_A100</item>
        <item name="colorPrimaryVariant">@color/teal_A100</item>
        <item name="colorOnPrimary">@color/teal_A100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <color name="colorPrimaryDark">@color/teal_A100</color>
</resources>