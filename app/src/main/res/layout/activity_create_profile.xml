<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/teal_A100"
    tools:context=".SignUp.createProfileActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/setprofilepic"
        android:scaleType="centerCrop"
        android:layout_marginBottom="60dp"
        android:background="@drawable/setprofilepiclayout"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/UserName"
        android:background="@drawable/edit_text_background"
        android:layout_marginHorizontal="30dp"
        android:hint="Name"
        android:textColorHint="@color/grey_800"
        android:paddingStart="15dp"
        android:textColor="@color/grey_800"
        android:inputType="textPersonName"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/ContinueButton"
        android:text="Set..."
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/teal_900"
        android:background="@drawable/login_button"
        />


</LinearLayout>