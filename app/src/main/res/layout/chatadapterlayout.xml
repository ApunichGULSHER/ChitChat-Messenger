<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/myMassageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/mymsglayout"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="50dp"
            android:text="This is My massage"/>

        <TextView
            android:id="@+id/youMassageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/yourmsglayout"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="This is Your massage"/>
</RelativeLayout>