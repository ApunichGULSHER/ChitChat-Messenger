<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileMenu.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/user_icon"
        app:civ_border_color="@color/teal_A100"
        app:civ_border_width="1dp" />
    <LinearLayout
        android:id="@+id/upperBar"
        android:layout_marginTop="60dp"
        android:layout_marginStart="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/teal_900"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:text="About" />
    </LinearLayout>
    <View
        android:id="@+id/BaseLine1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_200"
        android:layout_below="@id/userImage"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_below="@+id/BaseLine1">
        <LinearLayout
            android:id="@+id/accounttab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/accounticon" />
            <TextView
                android:layout_width="150dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Account"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="15dp"
                android:textColor="@color/grey_800"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/refertab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/inviteicon" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="  Invite   "
                android:gravity="center"
                android:textColor="@color/grey_800"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/logouttab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logouicon" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=" Logout "
                android:gravity="center"
                android:textColor="@color/grey_800"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from"
        android:textColor="@color/grey_700"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/BrandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BrandName"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/DevName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DevName"
        android:textColor="@color/grey_800"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:textSize="10sp"/>
</RelativeLayout>