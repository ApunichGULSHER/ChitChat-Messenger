<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blogspot.bunnylists.chitchat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/square_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/round_icon2"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChitChat">
        <activity
            android:name="com.blogspot.bunnylists.chitchat.ProfileMenu.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.blogspot.bunnylists.chitchat.Chat.ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.blogspot.bunnylists.chitchat.FriendsList"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.blogspot.bunnylists.chitchat.SignUp.createProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.blogspot.bunnylists.chitchat.LoginOTPactivity"
            android:exported="false" />
        <activity
            android:name="com.blogspot.bunnylists.chitchat.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.blogspot.bunnylists.chitchat.SignUp.SignupOTPactivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.blogspot.bunnylists.chitchat.SignUp.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.blogspot.bunnylists.chitchat.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.blogspot.bunnylists.chitchat.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>